from math import trunc       #importado do método trunc da biblioteca de matemática
num=float(input('Digite um valor:'))
print('O valor digitado foi {} e a sua porção inteira é {}'.format(num,math.trunc(num)))  #impresso somente a porção inteira do número digitado

#forma alternativa simple!
num=float(input('Digite um valor:'))
print('O valor digitado foi {} e a sua porção inteira é {} '.format(num, int(num)))
